@subnavheight:40px;
body{
	height: max-content;
}
.navigation {
	position:sticky;
	top: -@subnavheight;
	left: 0;
	width: 100%;
	height: 80px;
	box-shadow: 1px 1px 1px black;
	background-color: rgba(0,0,0,0.9);
	z-index: 200;
	& .topnav{
		background-color: rgba(255,255,255,0.5);
		height: @subnavheight;
		width: 100%;
		position: relative;
	}
	& .subnav{
		height: @subnavheight;
		background-color: rgba(0,0,0,0.9);
	}
}